# ==============================================
# RiskMonitor Backend - Environment Configuration
# ==============================================
# Ushbu faylni .env ga nusxalang va qiymatlarni to'ldiring

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/riskmonitor

# UzEx API
UZEX_ENDPOINT=https://xarid-api-auction.uzex.uz/Common/GetCompletedDeals
UZEX_BATCH_SIZE=100

# Rate Limiting (so'rovlar sonini cheklash)
RATE_LIMIT_RPS=2
CONCURRENCY=4
REQUEST_TIMEOUT_MS=15000

# Scheduler (avtomatik ishga tushirish)
SCHEDULE_CRON=0 */5 * * *

# Security
ADMIN_TRIGGER_KEY=change_me_to_secure_random_string

# Server
PORT=3001
NODE_ENV=development
